<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        <header>
            <div>
                <div>
                    <p>@Html.ActionLink("Diary", "Index", "Home")</p>
                </div>
                <div>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Work Days", "Index", "WorkDays")</li>
                            <li>@Html.ActionLink("Tasks", "Index", "Tasks")</li>
                            <li>@Html.ActionLink("Task Statuses ", "Index", "TaskStatus")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderBody()
        </div>
        <footer>
            <div>
                <div>
                    <p>&copy; @DateTime.Now.Year - Diary</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
